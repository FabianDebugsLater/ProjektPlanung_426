<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - YourPM</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Google Material Icons einbinden -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <!-- Google Material Symbols für Avatare -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Frontend.styles.css" asp-append-version="true"/>
</head>
<body>
    <div class="app-container">
        <header class="main-header">
            <div class="logo">YourPM</div>
            <nav class="main-nav">
                <ul>
                    <li><a class="active" asp-controller="Home" asp-action="Index">
                        <span class="material-icons-round">dashboard</span>Dashboard
                    </a></li>
                    <li><a asp-controller="Project" asp-action="Index">
                        <span class="material-icons-round">folder</span>Projekte
                    </a></li>
                    <li><a asp-controller="Task" asp-action="Index">
                        <span class="material-icons-round">check_circle</span>Aufgaben
                    </a></li>
                </ul>
            </nav>
            <div class="header-right">
                <button class="icon-button search-button">
                    <span class="material-icons-round">search</span>
                </button>
                <button class="icon-button notification-button">
                    <span class="material-icons-round">notifications</span>
                </button>
                <div class="avatar-group">
                    <div class="avatar avatar-icon primary-bg">
                        <span class="material-symbols-outlined">person</span>
                    </div>
                    <div class="avatar avatar-icon blue-bg">
                        <span class="material-symbols-outlined">person</span>
                    </div>
                    <div class="avatar avatar-icon amber-bg">
                        <span class="material-symbols-outlined">person</span>
                    </div>
                    <div class="avatar avatar-icon pink-bg">
                        <span class="material-symbols-outlined">person</span>
                    </div>
                </div>
            </div>
        </header>

        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>