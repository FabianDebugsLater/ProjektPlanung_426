@{
                    ViewData["Title"] = "Dashboard";
                }
                
                <div class="title-row">
                    <h1>Project Overview</h1>
                    <button class="pill-button">Dashboard</button>
                </div>
                
                <div class="content-row">
                    <div class="tasks-panel">
                        <h2>Tasks</h2>
                        <ul class="task-list">
                            <li>
                                <input type="checkbox" checked />
                                <span class="task-active">Update dependencies</span>
                                <span class="date">15.06.2023</span>
                            </li>
                            <li>
                                <input type="checkbox" />
                                <span>Design homepage</span>
                                <span class="date">01.05.2023</span>
                            </li>
                            <li>
                                <input type="checkbox" />
                                <span>Create a logo</span>
                                <span class="date">12.05.2023</span>
                            </li>
                            <li>
                                <input type="checkbox" checked />
                                <span>Write documentation</span>
                                <span class="date">22.05.2023</span>
                            </li>
                        </ul>
                    </div>
                
                    <div class="kanban-board">
                        <div class="kanban-column">
                            <h3>To Do</h3>
                            <div class="card">Design homepage</div>
                            <div class="card">Create a logo</div>
                        </div>
                        <div class="kanban-column">
                            <h3>In Progress</h3>
                            <div class="card in-progress">
                                <img src="~/images/avatars/user2.jpg" alt="User 2" />
                                Update dependencies
                            </div>
                        </div>
                        <div class="kanban-column">
                            <h3>Review</h3>
                            <div class="card">Add login page</div>
                        </div>
                        <div class="kanban-column">
                            <h3>Completed</h3>
                            <div class="card completed">Write documentation</div>
                        </div>
                    </div>
                </div>
                
                <div class="timeline">
                    <h2>Timeline</h2>
                    <div class="gantt-chart">
                        <div class="gantt-header">
                            <span>April</span>
                            <span>Mai</span>
                            <span>Juni</span>
                            <span>Juli</span>
                            <span>August</span>
                        </div>
                        <div class="gantt-body">
                            <div class="gantt-row">
                                <div class="task-name">Design homepage</div>
                                <div class="gantt-bar" style="left:15%; width:35%"></div>
                            </div>
                            <div class="gantt-row">
                                <div class="task-name">Create a logo</div>
                                <div class="gantt-bar" style="left:30%; width:40%"></div>
                            </div>
                            <div class="gantt-row">
                                <div class="task-name">Write documentation</div>
                                <div class="gantt-bar completed" style="left:30%; width:35%"></div>
                            </div>
                            <div class="gantt-row">
                                <div class="task-name">Update dependencies</div>
                                <div class="gantt-bar completed" style="left:50%; width:35%"></div>
                            </div>
                        </div>
                    </div>
                    <form id="projekt-form">
                        <input type="text" id="projekt-name" placeholder="Projektname" required />
                        <button type="submit">Projekt hinzufügen</button>
                    </form>
                </div>